@model IEnumerable<EventEase.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<h1 class="text-center mb-4">Browse Venues</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-4">Create New Venue</a>
</p>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow card-hover-effect">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.VenueName" style="height: 200px; object-fit: cover;">
                    <div class="card-body text-dark bg-white">
                        <h5 class="card-title fw-bold">@item.VenueName</h5>
                        <p class="card-text"><strong>Location:</strong> @item.Location</p>
                        <p class="card-text"><strong>Capacity:</strong> @item.Capacity</p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.VenueId" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.VenueId" class="btn btn-sm btn-outline-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.VenueId" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
